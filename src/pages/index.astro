---
import BaseLayout from "../layouts/BaseLayout.astro";
const posts = await Astro.glob("../blog/*.md");
---

<BaseLayout title="Home | tldrnotes">
  <h1>All Blog Posts</h1>
  <ul>
    {
      posts.map((post) => (
        <li>
          <a href={post.url}>{post.frontmatter.title ?? post.file}</a>
        </li>
      ))
    }
  </ul>
</BaseLayout>
