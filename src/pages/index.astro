<style>
  .about-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }
  .about-line {
    display: flex;
    align-items: center;
  }
  .about-line svg {
    flex-shrink: 0;
  }
  code {
    --func-color: hsl(220, 90%, 35%); /* Darker, saturated blue */
    --string-color: hsl(89, 56%, 25%); /* Darker, saturated green */

    background: hsl(var(--txt) / 0.07);
    padding: 0.2em 0.4em;
    border-radius: var(--radius-sm);
    font-size: 0.5em;
    font-family: "IBM Plex Mono", monospace;
    font-weight: lighter;
  }

  :global(.dark) code {
    --func-color: hsl(220, 87%, 72%);
    --string-color: hsl(89, 53%, 68%);
  }

  code .func {
    color: var(--func-color);
  }

  code .string {
    color: var(--string-color);
  }
</style>
