---
import Mainlayout from "@layouts/Mainlayout.astro";
import Link from "@components/Link.astro";
import ProjectCard from "@components/ProjectCard.astro";
---

<Mainlayout title="Pratik Thapa | Software Engineer & Problem Solver">
  <section class="container about" aria-label="About Me">
    <div class="about__image-container">
      <img
        src="/images/hi.jpg"
        alt="A portrait of Pratik Thapa"
        width="200"
        height="330"
      />
    </div>
    <div class="about__content">
      <h1 class="h1">Software Engineer & Problem Solver</h1>
      <p class="hero__subtitle">
        I build elegant, efficient software tools to solve complex challenges.
        From streamlining API testing to crafting digital portfolios, I thrive
        on turning ideas into reality.
      </p>
      <div class="hero__cta">
        <Link
          href="mailto:pratik@tldrnotes.net"
          style="primary"
          text="Get in Touch"
        />
      </div>
    </div>
  </section>

  <section class="projects container">
    <h2 class="section-title">A Few Problems I've Solved</h2>
    <div class="project-grid">
      <ProjectCard
        title="Hulak"
        description="Problem: Developers need a lightweight, dependency-free way to test APIs directly from the command line. Solution: A CLI tool written in Go that provides a fast and minimal API client."
        githubUrl="https://github.com/xaaha/hulak"
        tags="Go CLI-APP Tooling"
        status="Active"
      />
      <ProjectCard
        title="Pratik Picture"
        description="Problem: Photographers need a clean, fast, and visually appealing online portfolio. Solution: A custom-built static site that showcases photography with a focus on performance and aesthetics."
        webUrl="https://pratikpicture.com/"
        githubUrl="https://github.com/xaaha/pratikpicture"
        tags="HTML CSS JS Photography"
        status="Complete"
      />
      <ProjectCard
        title="This Website"
        description="Problem: I needed a personal space to document my learning and showcase my work. Solution: This site, built with Astro for performance and designed to be a clean, readable, and ever-evolving digital notebook."
        githubUrl="https://github.com/xaaha/your-portfolio-repo"
        tags="Astro TypeScript CSS"
        status="Active"
      />

      <ProjectCard
        title="Another Project"
        description="Problem: A description of the problem this project addresses. Solution: A summary of how your project solves that specific problem, showcasing your skills."
        githubUrl="https://github.com/xaaha/another-repo"
        tags="Tech-Stack"
        status="Archived"
      />
    </div>
  </section>
</Mainlayout>

<style>
  .about {
    display: grid;
    grid-template-columns: 1fr;
    align-items: center;
    gap: var(--space-2xl);
    padding-block: var(--space-2xl);
  }

  @media (min-width: 768px) {
    .about {
      grid-template-columns: 1fr 2fr;
    }
  }

  .about__image-container {
    display: grid;
    place-items: center;
  }

  .about__image-container img {
    width: 200px;
    height: 330px;
    border-radius: var(--radius-lg);
    object-fit: cover;
    box-shadow: var(--shadow-lg);
  }

  @media (min-width: 768px) {
    .about__image-container {
      order: 2;
    }
  }

  .about__content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: var(--space-lg);
  }

  .about__content .h1 {
    max-width: 100%;
  }

  .hero__subtitle {
    font-size: var(--fs-lg);
    color: hsl(var(--txt) / 0.8);
    max-width: 60ch;
  }

  .hero__cta {
    margin-top: var(--space-md);
  }

  .projects {
    padding-block: var(--space-2xl);
    border-top: 1px solid hsl(var(--txt) / 0.1);
  }

  .section-title {
    font-size: var(--fs-xl);
    text-align: center;
    margin-bottom: var(--space-2xl);
  }

  .project-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-lg);
  }

  @media (min-width: 768px) {
    .project-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
