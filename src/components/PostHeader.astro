---
import { Image } from "astro:assets";
import { formatDate, slugify } from "@scripts/utils";

const { category = "tech", title, date, image } = Astro.props as Frontmatter;
---

<header>
  <div class="container">
    <small>
      <a href={`/category/${slugify(category)}`} class="badge">{category}</a>
    </small>
    <h1 class="h2">{title}</h1>
    <p>
      on {formatDate(date)}
    </p>
  </div>
  {
    image?.src && image?.alt && (
      <Image
        src={image?.src}
        alt={image?.alt}
        width="1200"
        height="600"
        format="avif"
        fit="cover"
        quality={80}
        aspectRatio="5:2"
        class="hero-image"
      />
    )
  }
</header>
