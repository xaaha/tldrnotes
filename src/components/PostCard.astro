---
import { Image } from "astro:assets";
import { slugify, formatDate } from "@scripts/utils";
import Link from "@components/Link.astro";
const { frontmatter, url, tagType } = Astro.props;
const Tag = tagType;
const {
  category = "tech",
  image,
  author = "xaaha",
  title,
  date,
  description,
} = frontmatter as Frontmatter;
---

<article class="card">
  <small>
    <a href={`/category/${slugify(category)}`} class="badge"></a>
  </small>
  <a href={url} aria-hidden="true" tabindex="-1">
    {
      image?.src && image?.alt && (
        <Image
          src={image.src}
          alt={image.alt}
          width="400"
          height="250"
          format="webp"
          fit="cover"
          quality={80}
          aspectRatio="4:1"
        />
      )
    }
  </a>
  <div class="content">
    <div>
      <Tag class="h3">
        <a href={url}>{title}</a>
      </Tag>
      <small>
        by <a href={`/author/${slugify(author)}/`}>{author}</a> â€¢ {
          formatDate(date)
        }
      </small>
    </div>
    <p>{description}</p>
    <Link href={url} text="Read Post" style="secondary" />
  </div>
</article>
