---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import Tags from "@components/Tags.astro";
import { formatDate } from "@scripts/utils";

export interface Props {
  frontmatter: Frontmatter;
  url: string | undefined;
  tagType?: "h1" | "h2" | "h3" | "h4" | "h5" | "h6";
}

const { frontmatter, url, tagType = "h2" } = Astro.props;
const HeadingTag = tagType;

const { title, date, description, image, category } = frontmatter;
---

<article class="postcard">
  <!-- Optional Image Thumbnail -->
  {
    image?.src && (
      <a
        href={url}
        class="postcard__image-link"
        aria-hidden="true"
        tabindex="-1"
      >
        <Image
          src={image.src}
          alt={image.alt ?? `Thumbnail for ${title}`}
          width="130"
          height="130"
          format="webp"
          fit="cover"
          quality={80}
          aspectRatio="1:1"
          loading="eager"
        />
      </a>
    )
  }

  <!-- Main Content Area -->
  <div class="postcard__content">
    <HeadingTag class="postcard__title">
      <a href={url}>{title}</a>
    </HeadingTag>

    <div class="postcard__metadata">
      {
        date && (
          <>
            <Icon name="tabler:calendar-week" class="postcard__icon" />
            <time datetime={date.toString()}>{formatDate(date)}</time>
          </>
        )
      }
    </div>

    <p class="postcard__description">{description}</p>

    <Tags {category} />
  </div>
</article>

<style>
  /* Base styles for the postcard container */
  .postcard {
    display: flex;
    align-items: flex-start;
    gap: 1.75rem;
    padding-block: 2.5rem;
    border-bottom: 1px solid hsl(var(--txt) / 0.1); /*use main text at 10% opacity*/
    text-decoration: none;
    color: hsl(var(--txt));
    transition: background-color 0.2s ease;
  }

  .postcard:hover {
    background-color: hsl(var(--muted) / 0.5);
  }

  /* Responsive layout for mobile: stack vertically */
  @media (max-width: 640px) {
    .postcard {
      flex-direction: column;
      gap: 1.25rem;
    }
  }

  /* THUMBNAIL IMAGE STYLES */
  .postcard__image-link {
    display: block;
    flex-shrink: 0;
  }

  .postcard__image-link :global(img) {
    width: 130px;
    height: 130px;
    object-fit: cover;
    border-radius: 0.5rem;
    background-color: hsl(var(--muted));
    transition: transform 0.3s ease;
  }

  .postcard:hover .postcard__image-link :global(img) {
    transform: scale(1.03);
  }

  @media (max-width: 640px) {
    .postcard__image-link :global(img) {
      width: 100%;
      height: 180px;
    }
  }

  /* CONTENT STYLES */
  .postcard__content {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  /* Title Styles */
  .postcard__title {
    font-size: 1.375rem;
    font-weight: 600;
    line-height: 1.2;
    margin: 0;
  }

  .postcard__title a {
    text-decoration: none;
    color: inherit;
    background-image: linear-gradient(hsl(var(--accent)), hsl(var(--accent)));
    background-repeat: no-repeat;
    background-size: 0% 2px;
    background-position: 0% 100%;
    transition: background-size 0.3s ease;
  }

  .postcard__title a:hover {
    background-size: 100% 2px;
  }

  /* Metadata (Date) Styles */
  .postcard__metadata {
    font-size: 0.875rem;
    color: hsl(var(--txt) / 0.7);
    margin-block: 0.5rem 1rem;
    display: flex;
    align-items: center;
    gap: 0.4rem;
  }

  .postcard__icon {
    transform: translateY(-1px);
    font-size: 1.4em;
  }

  /* Description Styles */
  .postcard__description {
    margin: 0;
    /* Use the main text color with slightly less reduced opacity */
    color: hsl(var(--txt) / 0.85);
    line-height: 1.6;
    font-size: 1.145rem;
  }
</style>
