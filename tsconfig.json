{
  "compilerOptions": {
    "baseUrl": ".",
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ]
    },
    "verbatimModuleSyntax": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "sourceMap": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "dist/types"
  },
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "extends": "astro/tsconfigs/base"
}
